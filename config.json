{
  "use_cloud_by_default": false,
  "cloud_provider": "gemini",
  "cloud_model": "gemini-2.5-flash",

  "local_model": {
      "default_engine": "ollama",
      "fallback_engine": "llama-cpp",
      "ollama_model": "mistral",
      "model_path": null,
      "use_cloud_fallback": true,
      "cloud_fallback_min_confidence": 0.55,
      "max_tokens": 2048,
      "n_ctx": 8192,
      "temperature": 0.15
  },


  "embedding_model": "sentence-transformers/all-MiniLM-L6-v2",

  "sanitization": {
    "max_chunk_chars_sent_to_cloud": 1500,
    "max_chunks_sent_to_cloud": 2,
    "remove_pii": true
  },

  "llm_timeout_seconds": 240,
  "cache_dir": ".\\cache",
  "logs_dir": ".\\logs",

  "chroma_persist_dir": "./chroma_db",
  "enable_bm25": true,
  "embed_batch_size": 32,
  "reload_on_start": false,
  "show_sources_on_answer": true,

  "server": {
    "host": "127.0.0.1",
    "port": 5000,
    "debug": false,
    "api_key_for_admin": ""   
  }
}
